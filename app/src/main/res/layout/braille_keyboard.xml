<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_layout_braille"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >

    <RelativeLayout
        android:id="@+id/layout_dots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/dot_1"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_margin="30sp"
            android:background="@drawable/round_shape">

            <TextView
                android:id="@+id/txt_dot_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorPrimaryBright"
                android:textSize="40sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/dot_2"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/dot_1"
            android:layout_margin="30sp"
            android:background="@drawable/round_shape">

            <TextView
                android:id="@+id/txt_dot_2"

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colorPrimaryBright"
                android:textSize="40sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/dot_3"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/dot_2"
            android:layout_margin="30sp"
            android:background="@drawable/round_shape">

            <TextView
                android:id="@+id/txt_dot_3"

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colorPrimaryBright"
                android:textSize="40sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/dot_4"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignParentRight="true"
            android:layout_margin="30sp"
            android:background="@drawable/round_shape">

            <TextView
                android:id="@+id/txt_dot_4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/colorPrimaryBright"
                android:textSize="40sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/dot_5"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/dot_4"
            android:layout_alignParentRight="true"
            android:layout_margin="30sp"
            android:background="@drawable/round_shape">

            <TextView
                android:id="@+id/txt_dot_5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/colorPrimaryBright"
                android:textSize="40sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dot_6"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/dot_5"
            android:layout_alignParentRight="true"
            android:layout_margin="30sp"
            android:background="@drawable/round_shape">

            <TextView
                android:id="@+id/txt_dot_6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/colorPrimaryBright"
                android:textSize="40sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/layout_dots"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/caps_button"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:src="@drawable/caps_lock_big"
            android:background="@color/colorPrimary"

            android:layout_weight="0.493"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.003"/>

        <ImageButton
            android:id="@+id/numeric_button"
            android:layout_width="0dp"

            android:layout_height="45dp"
            android:src="@drawable/numbers"
            android:background="@color/colorPrimary"

            android:layout_weight="0.493"
            />

    </LinearLayout>




