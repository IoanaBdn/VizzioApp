<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_layout_braille"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >


    <RelativeLayout
        android:id="@+id/dot_1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/round_shape"
        android:layout_margin="30sp"
        >

        <TextView
            android:id="@+id/txt_dot_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/colorPrimaryBright"
            android:text="1"
            android:gravity="center"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/dot_2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/round_shape"
        android:layout_margin="30sp"
        android:layout_below="@id/dot_1"
        >

        <TextView
            android:id="@+id/txt_dot_2"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/colorPrimaryBright"
            android:text="2"
            android:gravity="center"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/dot_3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/round_shape"
        android:layout_margin="30sp"
        android:layout_below="@id/dot_2"
        >

        <TextView
            android:id="@+id/txt_dot_3"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/colorPrimaryBright"
            android:text="3"
            android:gravity="center"
            />

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/dot_4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/round_shape"
        android:layout_margin="30sp"
        android:layout_alignParentRight="true"
        >

        <TextView
            android:id="@+id/txt_dot_4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/colorPrimaryBright"
            android:text="4"
            android:gravity="center"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/dot_5"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/round_shape"
        android:layout_margin="30sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dot_4"
        >

        <TextView
            android:id="@+id/txt_dot_5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/colorPrimaryBright"
            android:text="5"
            android:gravity="center"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/dot_6"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/round_shape"
        android:layout_margin="30sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dot_5"
        >

        <TextView
            android:id="@+id/txt_dot_6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/colorPrimaryBright"
            android:text="6"
            android:gravity="center"
            />

    </RelativeLayout>

