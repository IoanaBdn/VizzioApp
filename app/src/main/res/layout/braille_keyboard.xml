<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30sp">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="146dp"
                android:layout_height="150dp"
                android:background="@drawable/square_shape"
                android:text="1"
                android:textSize="40sp"
                android:textColor="#f8fdf9" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30sp">

            <Button
                android:id="@+id/btn_2"
                android:layout_width="146dp"
                android:layout_height="150dp"
                android:background="@drawable/square_shape"
                android:text="2"
                android:textSize="40sp"
                android:textColor="#f8fdf9" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30sp">

            <Button
                android:id="@+id/btn_3"
                android:layout_width="146dp"
                android:layout_height="150dp"
                android:background="@drawable/square_shape"
                android:text="3"
                android:textSize="40sp"
                android:textColor="#f8fdf9" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30sp">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="146dp"
                android:layout_height="150dp"
                android:background="@drawable/square_shape"
                android:text="4"
                android:textSize="40sp"
                android:textColor="#f8fdf9" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30sp">

            <Button
                android:id="@+id/btn_5"
                android:layout_width="146dp"
                android:layout_height="150dp"
                android:background="@drawable/square_shape"
                android:text="5"
                android:textSize="40sp"
                android:textColor="#f8fdf9" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30sp">

            <Button
                android:id="@+id/btn_6"
                android:layout_width="146dp"
                android:layout_height="150dp"
                android:background="@drawable/square_shape"
                android:text="6"
                android:textSize="40sp"
                android:textColor="#f8fdf9" />

        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>