<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20sp">

            <ImageButton
                android:id="@+id/keyboard_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/keyboard_icon"
                android:background="@drawable/round_shape"
                android:textColor="#f8fdf9"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20sp">

            <ImageButton
                android:id="@+id/start_listen_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"


                android:background="@drawable/round_shape"
                android:src="@drawable/microphone_icon"
                android:textColor="#f8fdf9"
                />

            <ImageButton
                android:id="@+id/stop_listen_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"


                android:background="@drawable/round_shape"
                android:textColor="#f8fdf9"
                android:visibility="gone"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20sp">

            <ImageButton
                android:id="@+id/backspace_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/backspace_icon"

                android:background="@drawable/round_shape"
                android:textColor="#f8fdf9"
                />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>